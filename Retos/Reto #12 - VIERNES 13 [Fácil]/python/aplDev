import datetime

def es_viernes_13(mes, anio):
    dia = 13
    fecha = datetime.date(anio, mes, dia)
    return fecha.weekday() == 4  # 4 corresponde al día viernes en la librería datetime

# Ejemplo de uso
if es_viernes_13(1, 2023):
    print("¡Es viernes 13 en marzo de 2023!")
else:
    print("No es viernes 13 en marzo de 2023.")
